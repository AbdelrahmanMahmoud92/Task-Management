{
  "openapi": "3.0.0",
  "info": {
    "title": "Task API",
    "version": "1.0.0"
  },
  "paths": {
    "/tasks": {
      "get": {
        "tags": ["Tasks"],
        "summary": "Retrieves all tasks",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Task" }
                }
              }
            }
          },
          "500": { "description": "Internal server error" }
        }
      },
      "post": {
        "tags": ["Tasks"],
        "summary": "Creates a new task",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string" },
                  "description": { "type": "string" },
                  "category_id": { "type": "string" },
                  "priority": {
                    "type": "string",
                    "enum": ["Low", "Medium", "High"]
                  }
                },
                "required": ["title", "description", "category_id", "priority"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Task created successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Task" }
              }
            }
          },
          "400": { "description": "Validation error" },
          "404": { "description": "Category not found" },
          "500": { "description": "Internal server error" }
        }
      }
    },
    "/tasks/completed": {
      "get": {
        "tags": ["Tasks"],
        "summary": "Retrieves all completed tasks",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Task" }
                }
              }
            }
          },
          "500": { "description": "Internal server error" }
        }
      }
    },
    "/tasks/uncompleted": {
      "get": {
        "tags": ["Tasks"],
        "summary": "Retrieves all uncompleted tasks",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Task" }
                }
              }
            }
          },
          "500": { "description": "Internal server error" }
        }
      }
    },
    "/tasks/{id}": {
      "get": {
        "tags": ["Tasks"],
        "summary": "Retrieves a task by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Task ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Task" }
              }
            }
          },
          "404": { "description": "Task not found" },
          "500": { "description": "Internal server error" }
        }
      }
    },
    "/tasks/{id}/toggle": {
      "patch": {
        "tags": ["Tasks"],
        "summary": "Toggles the completion status of a task",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" },
            "description": "Task ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Task toggled successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Task" }
              }
            }
          },
          "404": { "description": "Task not found" },
          "500": { "description": "Internal server error" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Task": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "category_id": { "type": "string" },
          "priority": {
            "type": "string",
            "enum": ["Low", "Medium", "High"]
          },
          "completed": { "type": "boolean" }
        },
        "required": [
          "_id",
          "title",
          "description",
          "category_id",
          "priority",
          "completed"
        ]
      }
    }
  }
}
